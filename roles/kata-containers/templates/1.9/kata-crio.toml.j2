[crio]
root = "/var/lib/containers/storage"
runroot = "/var/run/containers/storage"
storage_driver = "overlay2"
storage_option = [
        "overlay2.override_kernel_check=1",
   ]

[crio.api]
listen = "/var/run/crio/crio.sock"
stream_address = ""
stream_port = "10010"
stream_enable_tls = false
stream_tls_cert = ""
stream_tls_key = ""
stream_tls_ca = ""
grpc_max_send_msg_size = 16777216
grpc_max_recv_msg_size = 16777216

[crio.runtime]
runtime = "/usr/local/bin/runc"
runtime_untrusted_workload = "/opt/kata/bin/kata-runtime"
default_workload_trust = "trusted"
no_pivot = false
conmon = "/usr/local/bin/conmon"
conmon_cgroup = "pod"
conmon_env = [
    "PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
]
selinux = false
seccomp_profile = "/etc/containers/policy.json"
apparmor_profile = "crio-default"
cgroup_manager = "{{ cgroup_driver }}"
default_capabilities = [
	"CHOWN",
	"DAC_OVERRIDE",
	"FSETID",
	"FOWNER",
	"NET_RAW",
	"SETGID",
	"SETUID",
	"SETPCAP",
	"NET_BIND_SERVICE",
	"SYS_CHROOT",
	"KILL",
]
default_sysctls = [
]
additional_devices = [
]
hooks_dir = [
    "/etc/containers/oci/hooks.d",
]
default_mounts_file = "/etc/containers/mounts.conf"
pids_limit = 1024
log_size_max = -1
log_to_journald = false
container_exits_dir = "/var/run/crio/exits"
container_attach_socket_dir = "/var/run/crio"
read_only = false
log_level = "error"
log_dir = "/var/log/crio/pods"
uid_mappings = ""
gid_mappings = ""
ctr_stop_timeout = 0
manage_network_ns_lifecycle = false

[crio.runtime.runtimes.runc]
runtime_path = "/usr/local/bin/runc"
runtime_type = "oci"
runtime_root = "/var/run/runc"

[crio.runtime.runtimes.kata-runtime]
runtime_path = "/opt/kata/bin/kata-runtime"
runtime_type = "oci"
runtime_root = "/var/run/kata-runtime"

[crio.image]
default_transport = "docker://"
pause_image = "{{ pod_infra_container_image }}"
pause_command = "/pause"
signature_policy = ""
image_volumes = "mkdir"
insecure_registries = [
    "0.0.0.0/0",
]
registries = [
    "docker.io"
]

[crio.network]
network_dir = "/etc/cni/net.d/"
plugin_dirs = [
	"/opt/cni/bin/",
]
