apiVersion: projectcalico.org/v3
kind: CalicoAPIConfig
metadata:
spec:
   datastoreType: "etcdv3"
   etcdEndpoints: "{% for item in groups['etcd'] %}https://{{ hostvars[item]['inventory_hostname'] }}:2379{% if not loop.last %},{% endif %}{% endfor %}"
   etcdKeyFile: /etc/etcd/tls/server-key.pem
   etcdCertFile: /etc/etcd/tls/server.pem
   etcdCACertFile: /etc/etcd/tls/ca.pem
